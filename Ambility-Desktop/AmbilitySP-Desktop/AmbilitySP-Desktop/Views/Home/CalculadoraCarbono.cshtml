@model AmbilitySP_Desktop.Models.CalcCarbono

@{
    ViewData["Title"] = "Calculadora de Carbono";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Estilo03.css" />
</head>

<body>
    <div class="containerCalculadora">
        <h2>Calculadora de carbono</h2>
        <form asp-action="Calcular" method="post">
            <div class="mb-3">
                <label for="opcaoSelecionada" class="form-label" style="font-family: 'JetBrains Mono'; font-size: 18px; color: #fff">Escolha o material que foi reciclado!</label>
                <select asp-for="OpcaoSelecionada" class="form-select" id="opcaoSelecionada" asp-items="@(new SelectList(Model.Materiais))">
                    <option value="">Selecione...</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="valors" class="form-label" style="font-family: 'JetBrains Mono'; font-size: 18px; color: #fff">Insira a quantidade de kilos</label>
                <input asp-for="Kilos" type="number" step="0.01" class="form-control" id="valor" />
            </div>
            <button type="submit" class="btn btn-primary">Calcular</button>
        </form>

        <div class="mt-4">
            <h4 style="font-family: 'JetBrains Mono'; font-size: 20px; color: #fff">Resultado: @Model.emissao</h4>
        </div>
    </div>
</body>
</html>
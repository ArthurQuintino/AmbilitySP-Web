@model AmbilitySP_Desktop.Models.CalcCarbono

@{
    ViewData["Title"] = "Calculadora de Carbono";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Estilo03.css" />
</head>

<body>
    <div class="containerCalculadora" >
        <h2 style="color:#fff;">Calculadora de carbono</h2>
        <form asp-action="Calcular" method="post">
            <div class="mb-3">
                <label class="form-label" style="font-family: 'JetBrains Mono'; font-size: 20px; margin-top:30px; color: #fff">Escolha o material que foi reciclado!</label>
                <select asp-for="emissaoMaterial" class="form-control" style="width: 500px; margin-left: 15rem">
                    @foreach (var item in ViewBag.Valores)
                    {
                        <option value="@item.emissaoMaterial">@item.Materiais</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label" style="font-family: 'JetBrains Mono'; font-size: 20px; margin-top:30px; color: #fff">Insira a quantidade de kilos</label>
                <input asp-for="Kilos" type="number" step="0.01" class="form-control" style="width: 500px; margin-left: 15rem" />
            </div>
            <div>
                <button type="submit" class="btn btn-primary" style="background:chartreuse">Calcular</button>
            </div>
        </form>

        <div class="mt-4">
            <h4 style="font-family: 'JetBrains Mono'; font-size: 20px; color: #fff">Quilos de carbono não emitidos: @Model.Resultado</h4>
        </div>
    </div>
</body>
</html>
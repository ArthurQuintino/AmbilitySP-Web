<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AmbilitySP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AmbilitySP_Desktop.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Faustina:ital@0;1&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="~/images/logo-clara.png">
</head>
<body>
    <header>
        <nav class="navbar navbar-dark fixed-top" style="background-color: #113C13;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'JetBrains Mono';">AmbilitySP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header" style="background-color: #172318;">
                        <img src="~/images/logo-clara.png" style="width: 200px; height: 140px; margin-left: 85px;" />
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body" style="background-color: #172318;">
                        <ul class="navbar-nav flex-grow-1 pe-3">
                            <li class="nav-item" style="display:flex; align-content: center; text-align: center; align-items: center;">
                                <img src="~/images/casa.png" style=" width: 20px; height: 20px; margin-right: 20px; margin-bottom: 3px;">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'JetBrains Mono';">Início</a>
                            </li>
                            <li class="nav-item" style="display:flex; align-content: center; text-align: center; align-items: center;">
                                <img src="~/images/reciclagem.png" style=" width: 20px; height: 20px; margin-right: 20px;">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Reciclagem" style="font-family: 'JetBrains Mono';">Beneficios da reciclagem</a>
                            </li>
                            <li class="nav-item" style="display:flex; align-content: center; text-align: center; align-items: center;">
                                <img src="~/images/informacao.png" style=" width: 20px; height: 20px; margin-right: 20px; margin-bottom: 3px;">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Reciclagem" style="font-family: 'JetBrains Mono';">Como descartar seu lixo</a>
                            </li>
                            <li class="nav-item" style="display:flex; align-content: center; text-align: center; align-items: center;">
                                <img src="~/images/calendario.png" style=" width: 20px; height: 20px; margin-right: 20px; margin-bottom: 3px;">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Reciclagem" style="font-family: 'JetBrains Mono';">Dias de coleta seletiva</a>
                            </li>
                            <li class="nav-item" style="display:flex; align-content: center; text-align: center; align-items: center;">
                                <img src="~/images/mapa01.png" style=" width: 20px; height: 20px; margin-right: 20px; margin-bottom: 3px;">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Reciclagem" style="font-family: 'JetBrains Mono';">Pontos de Coleta de Lixo</a>
                            </li>
                            <li class="nav-item" style="display:flex; align-content: center; text-align: center; align-items: center;">
                                <img src="~/images/telefone.png" style=" width: 20px; height: 20px; margin-right: 20px; margin-bottom: 3px">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Reciclagem" style="font-family: 'JetBrains Mono';">Denúncias</a>
                            </li>
                            <li class="nav-item" style="display:flex; align-content: center; text-align: center; align-items: center;">
                                <img src="~/images/co2.png" style=" width: 20px; height: 20px; margin-right: 20px;">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CalculadoraCarbono" style="font-family: 'JetBrains Mono';">Calculadora Ganhos</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="footer" style="background: #1A2F1C; display: flex; justify-content: center; width:100%; height: 80px; text-align: center; color: white; align-items: center;">
        <div class="container">
            <h3 style=" font-family: 'Faustina'; font-size: 20px;">Copyright &copy; 2024 - Alexandre Arthur Quintino </h3>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
